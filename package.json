{
  "name": "piiiqcy",
  "version": "1.0.0",
  "description": "WordPress theme boilerplate with monorepo structure",
  "private": true,
  "type": "module",
  "scripts": {
    "version": "node --no-warnings=ExperimentalWarning --loader ts-node/esm scripts/syncVersion.ts && git add packages/theme/integrations/wordpressDevInfo.ts",
    "dev": "pnpm --filter @piiiqcy/theme dev",
    "build": "pnpm --filter @piiiqcy/theme build",
    "build-stg": "pnpm --filter @piiiqcy/theme build-stg",
    "build-all": "pnpm build && pnpm build-stg",
    "analyze": "pnpm --filter @piiiqcy/theme analyze",
    "preview": "pnpm --filter @piiiqcy/theme preview",
    "dev:plugins": "pnpm --filter './packages/plugins/*' --parallel dev",
    "build:plugins": "pnpm --filter './packages/plugins/*' --parallel build",
    "dev:all": "concurrently -n theme,plugins -c blue,green \"pnpm dev\" \"pnpm dev:plugins\"",
    "build:all-packages": "pnpm build && pnpm build:plugins",
    "lint:scripts": "eslint --ext .ts packages/",
    "lint:styles": "npx stylelint \"packages/**/*.{css,scss}\" --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/dist-stg/**\"",
    "lint:php": "./vendor/bin/phpcs --standard=WordPress-Extra --colors ./packages/theme/dist/**/*.php",
    "phpstan": "./vendor/bin/phpstan analyse --memory-limit=1G",
    "format": "prettier --write . --ignore-unknown",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=23.4.0"
  },
  "packageManager": "pnpm@9.15.4",
  "volta": {
    "node": "23.4.0",
    "pnpm": "9.15.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "pnpm lint:scripts",
    "*.scss": "pnpm lint:styles",
    "packages/theme/dist/**/*.php": [
      "./vendor/bin/phpcs --standard=WordPress-Extra --colors",
      "pnpm phpstan"
    ],
    "*": "pnpm format"
  },
  "devDependencies": {
    "@markuplint/php-parser": "^4.6.22",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "autoprefixer": "^10.4.22",
    "chokidar": "3.6.0",
    "concurrently": "^9.1.2",
    "css-declaration-sorter": "^7.3.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "fs": "^0.0.2",
    "glob": "^13.0.0",
    "husky": "9.1.7",
    "lint-staged": "^16.2.7",
    "markuplint": "^4.14.0",
    "path": "^0.12.7",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "stylelint": "^16.26.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "svgo": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
