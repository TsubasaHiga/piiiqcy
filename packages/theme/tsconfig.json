{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/scripts/*"],
      "@components/*": ["src/scripts/components/*"],
      "@const/*": ["src/scripts/const/*"],
      "@libs/*": ["src/scripts/libs/*"],
      "@modules/*": ["src/scripts/modules/*"],
      "@pages/*": ["src/scripts/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@type/*": ["src/scripts/types/*"],
      "@utils/*": ["src/scripts/utils/*"]
    }
  },
  "include": ["src", "vite.config.ts", "integrations/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-stg"]
}
