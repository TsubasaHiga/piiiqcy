{
  "name": "@piiiqcy/theme",
  "version": "1.0.0",
  "description": "WordPress theme for piiiqcy",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "build-stg": "pnpm copyDistDir && tsc --noEmit && vite build --mode stg && pnpm copyDistDir packages/theme/dist/assets/images packages/theme/dist-stg/assets/images",
    "analyze": "tsc --noEmit && vite build --mode analyze",
    "preview": "pnpm build && vite preview",
    "convertImages": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ../../scripts/convertImages.ts",
    "copyDistDir": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ../../scripts/copyDistDirectory.ts"
  },
  "dependencies": {
    "auto-bind": "^5.0.1",
    "focus-visible": "^5.2.1",
    "instant.page": "^5.2.0",
    "ress": "^5.0.2",
    "umaki": "^0.7.5"
  },
  "devDependencies": {
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.94.2",
    "vite": "^7.2.7",
    "vite-plugin-full-reload": "^1.2.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
