# Project name (used for Docker containers and theme directory)
# Change this when starting a new project
PREFIX=piiiqcy

# Port Configuration (change if ports are already in use)
WP_PORT=8000
PMA_PORT=8080

# MySQL Configuration
MYSQL_RANDOM_ROOT_PASSWORD=yes
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress

# WordPress Configuration
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress

# WordPress Debug Mode (controls Vite dev server vs production assets)
# - "true": Enable debug mode, use Vite dev server (for development)
# - "" or commented out: Disable debug mode, use built assets (for production testing)
# Note: "false" does NOT work - PHP casts non-empty strings to true
# To disable, use empty string or comment out: # WORDPRESS_DEBUG="true"
WORDPRESS_DEBUG="true"

# Vite Development Server
# Set this to your local IP address for HMR to work across devices
VITE_API_URL=localhost
VITE_PORT=3000

# Environment URLs (used for database search-replace)
# Configure these for your project's deployment environments
URL_LOCAL=http://localhost:8000
URL_STG=https://stg.example.com
URL_PROD=https://example.com
